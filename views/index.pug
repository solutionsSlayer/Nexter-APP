extends base

mixin realtors(number, name, text)
  img.realtors__img(src=`img/realtor-${number}.jpeg` alt=`Realtor ${number}`)
  .realtors__details
    h4.heading-4.heading-4--light= name
    p.realtors__sold= text

mixin feature(icon, title, text)
  .feature
    svg.feature__icon
      use(xlink:href=`img/sprite.svg#icon-${icon}`)
    h4.heading-4.heading-4--dark= title
    p.feature__text= text

block content
  body.container__home
    include _header

    header.header
      img.header__logo(src="img/logo.png" alt="Nexter logo")
      h3.heading-3 Your own home:
      h1.heading-1 The ultimate personal freedom
      a.btn.header__btn(href="/homes") View our properties
      .header__seenon-text Seen on
      .header__seenon-logos
        img(src="img/logo-bbc.png" alt="Seen on logo 1")
        img(src="img/logo-forbes.png" alt="Seen on logo 2")
        img(src="img/logo-techcrunch.png" alt="Seen on logo 3")
        img(src="img/logo-bi.png" alt="Seen on logo 4")

    .realtors
      h3.heading-3 Top 3 Realtors
      .realtors__list
        +realtors(1, 'Erik Feinman', '245 houses sold')
        +realtors(2, 'Kim Brown', '215 houses sold')
